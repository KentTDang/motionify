/* Exercises Section */
.exercises-container {
  background: #ffffff;
  border-radius: 0;
  padding: 0;
  box-shadow: none;
}

.exercises-header {
  text-align: left;
  margin-bottom: 3rem;
}

.exercises-header h2 {
  color: #1a1a1a;
  margin-bottom: 0.5rem;
  font-weight: 500;
  font-size: 1.5rem;
}

.exercises-header p {
  color: #666666;
  font-size: 0.875rem;
}

.exercise-categories {
  display: flex;
  gap: 0;
  justify-content: flex-start;
  margin-bottom: 3rem;
  flex-wrap: wrap;
  border-bottom: 1px solid #e8e8e8;
}

.category-btn {
  padding: 1rem 0;
  border: none;
  background: transparent;
  color: #666666;
  border-radius: 0;
  cursor: pointer;
  transition: all 0.2s ease;
  font-family: inherit;
  font-size: 0.875rem;
  margin-right: 2rem;
  position: relative;
}

.category-btn:hover,
.category-btn.active {
  color: #1a1a1a;
  background: transparent;
}

.category-btn.active::after {
  content: '';
  position: absolute;
  bottom: -1px;
  left: 0;
  right: 0;
  height: 2px;
  background: #1a1a1a;
}

.exercises-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
  gap: 2rem;
}

.exercise-card {
  border: 1px solid #e8e8e8;
  border-radius: 0;
  padding: 2rem;
  cursor: pointer;
  transition: all 0.2s ease;
  background: #ffffff;
}

.exercise-card:hover {
  border-color: #1a1a1a;
}

.exercise-card h4 {
  color: #1a1a1a;
  margin-bottom: 1rem;
  font-weight: 500;
  font-size: 1rem;
}

.exercise-meta {
  display: flex;
  gap: 1.5rem;
  margin-bottom: 1rem;
  font-size: 0.75rem;
  color: #666666;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.exercise-description {
  color: #666666;
  line-height: 1.6;
  font-size: 0.875rem;
}

/* Modal Styles */
.modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.95);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 2000;
  backdrop-filter: blur(10px);
}

.modal-content {
  background: #ffffff;
  border-radius: 0;
  max-width: 500px;
  width: 90%;
  max-height: 80vh;
  overflow-y: auto;
  border: 1px solid #e8e8e8;
}

.modal-header {
  padding: 2rem;
  border-bottom: 1px solid #e8e8e8;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.modal-header h3 {
  font-weight: 500;
  color: #1a1a1a;
}

.modal-close {
  background: none;
  border: none;
  font-size: 1.5rem;
  cursor: pointer;
  color: #666666;
  width: 40px;
  height: 40px;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-close:hover {
  color: #1a1a1a;
}

.modal-body {
  padding: 2rem;
}

.exercise-timer {
  text-align: center;
  margin-bottom: 2rem;
}

.progress-circle {
  width: 120px;
  height: 120px;
  border: 2px solid #e8e8e8;
  border-top: 2px solid #1a1a1a;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 auto 1rem;
  animation: spin 1s linear infinite;
}

.progress-circle span {
  font-size: 2rem;
  font-weight: 300;
  color: #1a1a1a;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.exercise-instructions p {
  line-height: 1.6;
  margin-bottom: 2rem;
  color: #666666;
  font-size: 0.875rem;
}

.exercise-controls {
  display: flex;
  gap: 1rem;
  justify-content: center;
  flex-wrap: wrap;
}

