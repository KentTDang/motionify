/* Reset and Base Styles */
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  background: #ffffff;
  min-height: 100vh;
  color: #000000;
  overflow-x: hidden;
  font-weight: 400;
  line-height: 1.5;
}

.app {
  min-height: 100vh;
  background: #ffffff;
}

/* Header Styles */
.header {
  background: #ffffff;
  border-bottom: 1px solid #e0e0e0;
  padding: 2rem 0;
  position: sticky;
  top: 0;
  z-index: 100;
}

.nav-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 3rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.logo h1 {
  font-size: 1.5rem;
  font-weight: 600;
  color: #000000;
  margin: 0;
  letter-spacing: -0.02em;
}

.tagline {
  font-size: 0.875rem;
  color: #666666;
  font-weight: 400;
  margin-top: 0.25rem;
}

.nav-tabs {
  display: flex;
  gap: 0;
}

.nav-tab {
  padding: 0.75rem 1.5rem;
  border: none;
  background: transparent;
  color: #666666;
  font-weight: 400;
  border-radius: 0;
  cursor: pointer;
  transition: all 0.2s ease;
  font-size: 0.9rem;
  position: relative;
}

.nav-tab:hover {
  color: #000000;
}

.nav-tab.active {
  color: #000000;
  background: transparent;
}

.nav-tab.active::after {
  content: '';
  position: absolute;
  bottom: -2rem;
  left: 0;
  right: 0;
  height: 2px;
  background: #000000;
}

/* Main Content */
.main-content {
  max-width: 1200px;
  margin: 0 auto;
  padding: 3rem;
}

.tab-content {
  animation: fadeIn 0.2s ease-in-out;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

/* Dashboard Styles */
.dashboard-grid {
  display: grid;
  grid-template-columns: 1fr 300px;
  gap: 3rem;
  margin-bottom: 3rem;
}

.camera-section {
  background: #ffffff;
  border-radius: 0;
  padding: 0;
  box-shadow: none;
  border: 1px solid #e8e8e8;
}

.camera-container {
  position: relative;
  border-radius: 0;
  overflow: hidden;
  background: #f8f8f8;
  aspect-ratio: 16/9;
  margin-bottom: 2rem;
}

.camera-mockup {
  width: 100%;
  height: 100%;
  position: relative;
}

.camera-placeholder {
  width: 100%;
  height: 100%;
  background: #f8f8f8;
  display: flex;
  align-items: center;
  justify-content: center;
}

.webcam-simulation {
  width: 80%;
  height: 80%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.person-outline {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.person-outline .head {
  width: 60px;
  height: 60px;
  border-radius: 50%;
  background: rgba(26, 26, 26, 0.1);
  margin-bottom: 10px;
}

.person-outline .shoulders {
  width: 120px;
  height: 40px;
  border-radius: 20px;
  background: rgba(26, 26, 26, 0.08);
  margin-bottom: 5px;
}

.person-outline .spine {
  width: 4px;
  height: 80px;
  background: rgba(26, 26, 26, 0.12);
  border-radius: 2px;
}

.camera-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: transparent;
  display: flex;
  align-items: center;
  justify-content: center;
  color: #666666;
}

.posture-indicator {
  text-align: center;
  background: rgba(255, 255, 255, 0.95);
  padding: 1rem 1.5rem;
  border-radius: 0;
  border: 1px solid #e8e8e8;
}

.indicator-icon {
  font-size: 1.5rem;
  margin-bottom: 0.5rem;
}

.indicator-text {
  font-size: 0.875rem;
  font-weight: 400;
  color: #1a1a1a;
}

.camera-controls {
  display: flex;
  gap: 1rem;
  justify-content: flex-start;
  padding: 0 1.5rem 1.5rem;
}

.status-panel {
  display: flex;
  flex-direction: column;
  gap: 2rem;
}

.timer-section,
.posture-status,
.quick-stats {
  background: #ffffff;
  border-radius: 0;
  padding: 0;
  box-shadow: none;
  border: 1px solid #e8e8e8;
  padding: 1.5rem;
}

.timer-section h3,
.posture-status h3,
.quick-stats h3 {
  margin-bottom: 1.5rem;
  color: #1a1a1a;
  font-weight: 500;
  font-size: 0.875rem;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.timer-display {
  font-size: 2.5rem;
  font-weight: 300;
  color: #1a1a1a;
  text-align: center;
  margin-bottom: 1.5rem;
  font-family: 'Inter', monospace;
  letter-spacing: -0.02em;
}

.timer-controls {
  display: flex;
  gap: 0.5rem;
  justify-content: center;
  flex-wrap: wrap;
}

.status-indicator {
  text-align: center;
}

.status-icon {
  font-size: 2rem;
  margin-bottom: 1rem;
}

.status-text {
  font-size: 1rem;
  font-weight: 400;
  margin-bottom: 1.5rem;
  color: #1a1a1a;
}

.confidence-bar {
  width: 100%;
  height: 2px;
  background: #e8e8e8;
  border-radius: 0;
  overflow: hidden;
  margin-bottom: 0.75rem;
}

.confidence-fill {
  height: 100%;
  background: #1a1a1a;
  transition: width 0.3s ease;
}

.confidence-text {
  font-size: 0.75rem;
  color: #666666;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

.stats-grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 1.5rem;
}

.stat-item {
  text-align: left;
  padding: 1rem 0;
  border-bottom: 1px solid #e8e8e8;
}

.stat-item:last-child {
  border-bottom: none;
}

.stat-value {
  display: block;
  font-size: 1.5rem;
  font-weight: 300;
  color: #1a1a1a;
  margin-bottom: 0.25rem;
}

.stat-label {
  font-size: 0.75rem;
  color: #666666;
  text-transform: uppercase;
  letter-spacing: 0.05em;
}

/* Button Styles */
.btn {
  padding: 0.75rem 1.5rem;
  border: 1px solid #1a1a1a;
  border-radius: 0;
  font-weight: 400;
  cursor: pointer;
  transition: all 0.2s ease;
  font-size: 0.875rem;
  font-family: inherit;
  background: transparent;
  color: #1a1a1a;
}

.btn:disabled {
  opacity: 0.5;
  cursor: not-allowed;
}

.btn-small {
  padding: 0.5rem 1rem;
  font-size: 0.75rem;
}

.btn-primary {
  background: #1a1a1a;
  color: #ffffff;
  border-color: #1a1a1a;
}

.btn-primary:hover:not(:disabled) {
  background: #333333;
  border-color: #333333;
}

.btn-secondary {
  background: transparent;
  color: #666666;
  border-color: #e8e8e8;
}

.btn-secondary:hover:not(:disabled) {
  border-color: #1a1a1a;
  color: #1a1a1a;
}

.btn-success {
  background: #1a1a1a;
  color: #ffffff;
  border-color: #1a1a1a;
}

.btn-success:hover:not(:disabled) {
  background: #333333;
}

.btn-warning {
  background: transparent;
  color: #666666;
  border-color: #e8e8e8;
}

.btn-warning:hover:not(:disabled) {
  border-color: #666666;
}

.btn-danger {
  background: transparent;
  color: #666666;
  border-color: #e8e8e8;
}

.btn-danger:hover:not(:disabled) {
  background: #f8f8f8;
  border-color: #1a1a1a;
  color: #1a1a1a;
}

.btn-text {
  background: transparent;
  color: #666666;
  border: none;
}

.btn-text:hover {
  color: #1a1a1a;
}

/* Notification Banner */
.notification-banner {
  position: fixed;
  top: 100px;
  left: 50%;
  transform: translateX(-50%);
  background: #ffffff;
  border-radius: 0;
  padding: 2rem;
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  z-index: 1000;
  max-width: 500px;
  width: 90%;
  border: 1px solid #e8e8e8;
  border-left: 4px solid #f0f8ff;
}

.notification-banner.hidden {
  display: none;
}

.notification-content {
  display: flex;
  align-items: flex-start;
  gap: 1.5rem;
}

.notification-icon {
  font-size: 1.5rem;
  margin-top: 0.25rem;
}

.notification-text h4 {
  margin-bottom: 0.5rem;
  color: #1a1a1a;
  font-weight: 500;
  font-size: 1rem;
}

.notification-text p {
  color: #666666;
  font-size: 0.875rem;
  line-height: 1.5;
}

.notification-actions {
  display: flex;
  gap: 0.5rem;
  flex-direction: column;
  margin-left: auto;
  min-width: 120px;
}

